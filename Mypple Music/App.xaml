            <!--滚动歌词样式-->
            <Style x:Key="LyricListBoxStyle"
                   TargetType="ListBoxItem">
                <Setter Property="MinHeight"
                        Value="50" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                            <StackPanel Background="Transparent"
                                        HorizontalAlignment="Left"
                                        Margin="0,20,0,0">
                                <TextBlock x:Name="Lyric"
                                           Text="{Binding Content}"
                                           TextWrapping="WrapWithOverflow"
                                           Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl},Path=ActualWidth,Converter={StaticResource Value},ConverterParameter=480}">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush x:Name="ForegroundBrush"
                                                         Color="Gray" />
                                    </TextBlock.Foreground>
                                </TextBlock>
                                <!--<TextBlock x:Name="Trans"
                                           Text="{Binding Translation}"
                                           FontSize="18">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush x:Name="TransForegroundBrush"
                                                         Color="#55000000" />
                                    </TextBlock.Foreground>

                                </TextBlock>-->
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver"
                                                   Value="True" />
                                        <Condition Property="IsSelected"
                                                   Value="False" />
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="Lyric"
                                            Property="Foreground"
                                            Value="#BABABA" />
                                    <!--<Setter TargetName="Trans"
                                            Property="Foreground"
                                            Value="#77000000" />-->
                                </MultiTrigger>

                                <Trigger Property="IsSelected"
                                         Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard Timeline.DesiredFrameRate="24">
                                                <ColorAnimation Storyboard.TargetName="ForegroundBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="White"
                                                                Duration="0:0:0.3" />
                                                <!--<DoubleAnimation Storyboard.TargetName="Lyric"
                                                                 Storyboard.TargetProperty="FontSize"
                                                                 To="28"
                                                                 Duration="0:0:0.3" />-->
                                                <!--<ColorAnimation Storyboard.TargetName="TransForegroundBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="White"
                                                                Duration="0:0:0.3" />
                                                <DoubleAnimation Storyboard.TargetName="Trans"
                                                                 Storyboard.TargetProperty="FontSize"
                                                                 To="20"
                                                                 Duration="0:0:0.3" />-->
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard Timeline.DesiredFrameRate="24">
                                                <ColorAnimation Storyboard.TargetName="ForegroundBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="Gray"
                                                                Duration="0:0:0.6" />
                                                <!--<DoubleAnimation Storyboard.TargetName="Lyric"
                                                                 Storyboard.TargetProperty="FontSize"
                                                                 To="25"
                                                                 Duration="0:0:0.3" />-->
                                                <!--<ColorAnimation Storyboard.TargetName="TransForegroundBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#55000000"
                                                                Duration="0:0:0.6" />
                                                <DoubleAnimation Storyboard.TargetName="Trans"
                                                                 Storyboard.TargetProperty="FontSize"
                                                                 To="18"
                                                                 Duration="0:0:0.3" />-->
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--透明按钮样式-->
            <Style x:Key="TransParentButton"
                   TargetType="Button">
                <Setter Property="Width"
                        Value="40" />
                <Setter Property="Height"
                        Value="35" />
                <Setter Property="FontWeight"
                        Value="Bold" />
                <Setter Property="FontSize"
                        Value="18" />
                <Setter Property="Foreground"
                        Value="{DynamicResource PrimaryHueLightBrush}" />
                <Setter Property="Template">
