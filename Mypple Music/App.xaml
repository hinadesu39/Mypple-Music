            <!--透明按钮WithMouseOver颜色样式-->
            <Style x:Key="TransParentWithMouseOverButton"
                   TargetType="Button">
                <Setter Property="Width"
                        Value="40" />
                <Setter Property="Height"
                        Value="35" />
                <Setter Property="FontWeight"
                        Value="Light" />
                <Setter Property="FontSize"
                        Value="12" />
                <Setter Property="Foreground"
                        Value="{DynamicResource DefaultForgeground}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid>
                                <Border x:Name="border"
                                        CornerRadius="3" />
                                <TextBlock FontFamily="微软雅黑" />
                                <ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="border"
                                            Property="Background"
                                            Value="{DynamicResource PrimaryHueLightBrush}" />
                                    <Setter TargetName="border"
                                            Property="Opacity"
                                            Value="0.5" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!--圆形按钮-->
            <Style x:Key="CornerRadiusButton"
                   TargetType="Button">
                <Setter Property="Width"
                        Value="30" />
                <Setter Property="Height"
                        Value="30" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border x:Name="border"
                                    CornerRadius="100"
                                    Background="#33000000">
                                <ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="border"
                                            Property="Background"
                                            Value="{DynamicResource PrimaryHueLightBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>

                    </Setter.Value>
                </Setter>
            </Style>
            <!--圆形按钮WithFillColor-->
            <Style x:Key="CornerRadiusButtonWithFillColor"
                   TargetType="Button">
                <Setter Property="Width"
                        Value="30" />
                <Setter Property="Height"
                        Value="30" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border x:Name="border"
                                    CornerRadius="100"
                                    Background="{DynamicResource PrimaryHueLightBrush}">
                                <ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="border"
                                            Property="Background"
                                            Value="#33000000" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>

                    </Setter.Value>
                </Setter>
            </Style>

            <!--专辑展示页面样式-->
            <Style x:Key="AlbumListStyle"
                   TargetType="ListBox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListBox}">
                            <extension:SmoothScrollViewer HorizontalScrollBarVisibility="Disabled">
                                <extension:SmoothScrollViewer.Template>
                                    <ControlTemplate TargetType="extension:SmoothScrollViewer">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                SnapsToDevicePixels="True">
                                            <Grid Background="{TemplateBinding Background}">
                                                <ScrollContentPresenter  Cursor="{TemplateBinding Cursor}"
                                                                         Margin="{TemplateBinding Padding}"
                                                                         ContentTemplate="{TemplateBinding ContentTemplate}" />
                                                <ScrollBar x:Name="PART_VerticalScrollBar"
                                                           HorizontalAlignment="Right"
                                                           Maximum="{TemplateBinding ScrollableHeight}"
                                                           Orientation="Vertical"
                                                           Style="{StaticResource ScrollBarStyle}"
                                                           ViewportSize="{TemplateBinding ViewportHeight}"
                                                           Value="{TemplateBinding VerticalOffset}"
                                                           Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" />
                                                <ScrollBar x:Name="PART_HorizontalScrollBar"
                                                           Maximum="{TemplateBinding ScrollableWidth}"
                                                           Orientation="Horizontal"
                                                           Style="{StaticResource ScrollBarStyle}"
                                                           VerticalAlignment="Bottom"
                                                           Value="{TemplateBinding HorizontalOffset}"
                                                           ViewportSize="{TemplateBinding ViewportWidth}"
                                                           Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </extension:SmoothScrollViewer.Template>
                                <WrapPanel Orientation="Horizontal"
                                           IsItemsHost="True"
                                           ScrollViewer.CanContentScroll="True"
                                           Margin="0,0,10,0" />
                            </extension:SmoothScrollViewer>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="AlbumListItemStyle"
                   TargetType="ListBoxItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom}">
                                <StackPanel Width="220"
                                            Height="260"
                                            Margin="0,20,0,0">
                                    <Grid>
                                        <!--图片不存在时默认展示-->
                                        <Border Width="200"
                                                Height="200"
                                                CornerRadius="8"
                                                Background="LightGray"
                                                Margin="5,5,5,0">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="20"
                                                                  ShadowDepth="0"
                                                                  Color="Black"
                                                                  Opacity="0.4" />
                                            </Border.Effect>
                                            <Grid>
                                                <TextBlock FontFamily="{StaticResource IconFont}"
                                                           FontSize="80"
                                                           FontWeight="ExtraBold"
                                                           Text="&#xe64b;"
                                                           Foreground="#33000000"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                        <Border CornerRadius="8"
                                                Margin="5,5,5,0"
                                                Width="200"
                                                Height="200">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding LocalPicUrl}"
                                                            RenderOptions.BitmapScalingMode="LowQuality" />
                                            </Border.Background>
                                        </Border>

                                        <Rectangle x:Name="background"
                                                   Fill="#88000000"
                                                   Width="200"
                                                   Height="200"
                                                   RadiusX="8"
                                                   Margin="5,5,5,0"
                                                   RadiusY="8"
                                                   Visibility="Hidden">
                                        </Rectangle>
                                        <Button x:Name="playButton"
                                                Style="{StaticResource CornerRadiusButton}"
                                                Content="&#xea82;"
                                                FontFamily="{StaticResource IconFont}"
                                                Foreground="Snow"
                                                FontSize="18"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Left"
                                                Visibility="Hidden"
                                                Margin="20,10,10,10"
                                                Command="{Binding DataContext.PlayCommand, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}" />
                                        <Button x:Name="infoButton"
                                                Style="{StaticResource CornerRadiusButton}"
                                                Content="&#xe719;"
                                                FontFamily="{StaticResource IconFont}"
                                                Foreground="Snow"
                                                FontSize="18"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Right"
                                                Margin="10,10,20,10"
                                                Visibility="Hidden"
                                                Command="{Binding DataContext.SettingAlbumCommand, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="15"
                                               TextWrapping="Wrap"
                                               Margin="10,0,0,0"
                                               Foreground="{DynamicResource DefaultForgeground}" />
                                    <TextBlock Text="{Binding Artist}"
                                               FontSize="12"
                                               Foreground="#7E7E7E"
                                               TextWrapping="Wrap"
                                               Margin="10,0,0,0" />
                                </StackPanel>
                            </materialDesign:TransitioningContent>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="background"
                                            Property="Visibility"
                                            Value="Visible" />
                                    <Setter TargetName="infoButton"
                                            Property="Visibility"
                                            Value="Visible" />
                                    <Setter TargetName="playButton"
                                            Property="Visibility"
                                            Value="Visible" />
                                    <!--<Setter Property="Tag"
                                            Value="{Binding RelativeSource={RelativeSource Self},Path=}" />-->

                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--图标文字按钮-->
            <Style x:Key="IconWithContentButton"
                   TargetType="Button">
                <Setter Property="Margin"
                        Value="0,0,10,0" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderThickness="1"
                                    CornerRadius="3"
                                    Background="{DynamicResource PrimaryHueLightBrush}">
                                <Border x:Name="border"
                                        BorderThickness="1"
                                        CornerRadius="3">
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                                   FontFamily="{StaticResource IconFont}"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center" />
                                        <ContentPresenter Content="{TemplateBinding Content}"
                                                          Margin="3,0,0,0" />
                                    </StackPanel>
                                </Border>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="border"
                                            Property="Background"
                                            Value="#33000000" />
                                </Trigger>
                                <Trigger Property="IsPressed"
                                         Value="True">
                                    <Setter Property="FontSize"
                                            Value="12" />
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--PopUp按钮样式-->
            <Style x:Key="ToPopUpButtonStyle"
                   TargetType="ToggleButton">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="borderIn"
                                    Background="Transparent"
                                    CornerRadius="2">
                                <StackPanel VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <TextBlock HorizontalAlignment="Center"
                                               FontFamily="{StaticResource IconFont}"
                                               Text="&#xe719;"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource PrimaryHueLightBrush}">
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="borderIn"
                                            Property="Background"
                                            Value="#22000000" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--RadioButtonWithText样式-->
            <Style x:Key="RadioButtonWithTextStyle"
                   TargetType="RadioButton">
                <Setter Property="Height"
                        Value="30" />
                <Setter Property="Foreground"
                        Value="Snow" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="borderOut"
                                    CornerRadius="3"
                                    BorderThickness="0.5"
                                    BorderBrush="{DynamicResource PrimaryHueLightBrush}">
                                <Border x:Name="borderIn"
                                        CornerRadius="3">
                                    <TextBlock Text="{Binding Path=Content,RelativeSource={RelativeSource AncestorType=RadioButton}}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Border>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked"
                                         Value="True">
                                    <Setter TargetName="borderOut"
                                            Property="Background"
                                            Value="{DynamicResource PrimaryHueLightBrush}" />
                                </Trigger>
                                <Trigger Property="IsChecked"
                                         Value="False">
                                    <Setter TargetName="borderOut"
                                            Property="Background"
                                            Value="Transparent" />
                                </Trigger>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="borderIn"
                                            Property="Background"
                                            Value="#22000000" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--RadioButtonWithIcon样式-->
            <Style x:Key="RadioButtonWithIconStyle"
                   TargetType="RadioButton">
                <Setter Property="FontWeight"
                        Value="Bold" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="borderIn"
                                    Background="Transparent"
                                    CornerRadius="2">
                                <StackPanel VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <TextBlock x:Name="btnContent"
                                               HorizontalAlignment="Center"
                                               FontFamily="{StaticResource IconFont}"
                                               Text="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton},Path=Content}"
                                               FontWeight="{TemplateBinding FontWeight}"
                                               Foreground="#242424">
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="borderIn"
                                            Property="Background"
                                            Value="#22000000" />
                                </Trigger>
                                <Trigger Property="IsChecked"
                                         Value="True">
                                    <Setter TargetName="borderIn"
                                            Property="Background"
                                            Value="#33000000" />
                                    <Setter TargetName="btnContent"
                                            Property="Text"
                                            Value="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton},Path=Tag}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--精选推荐列表样式-->
            <Style x:Key="RecommendListStyle"
                   TargetType="ListBox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListBox}">
                            <extension:SmoothScrollViewer HorizontalScrollBarVisibility="Disabled">
                                <extension:SmoothScrollViewer.Template>
                                    <ControlTemplate TargetType="extension:SmoothScrollViewer">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                SnapsToDevicePixels="True">
                                            <Grid Background="{TemplateBinding Background}">
                                                <ScrollContentPresenter  Cursor="{TemplateBinding Cursor}"
                                                                         Margin="{TemplateBinding Padding}"
                                                                         ContentTemplate="{TemplateBinding ContentTemplate}" />
                                                <ScrollBar x:Name="PART_VerticalScrollBar"
                                                           HorizontalAlignment="Right"
                                                           Maximum="{TemplateBinding ScrollableHeight}"
                                                           Orientation="Vertical"
                                                           Style="{StaticResource ScrollBarStyle}"
                                                           ViewportSize="{TemplateBinding ViewportHeight}"
                                                           Value="{TemplateBinding VerticalOffset}"
                                                           Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" />
                                                <ScrollBar x:Name="PART_HorizontalScrollBar"
                                                           Maximum="{TemplateBinding ScrollableWidth}"
                                                           Orientation="Horizontal"
                                                           Style="{StaticResource ScrollBarStyle}"
                                                           VerticalAlignment="Bottom"
                                                           Value="{TemplateBinding HorizontalOffset}"
                                                           ViewportSize="{TemplateBinding ViewportWidth}"
                                                           Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </extension:SmoothScrollViewer.Template>
                                <StackPanel Orientation="Horizontal"
                                            IsItemsHost="True"
                                            ScrollViewer.CanContentScroll="True"
                                            Margin="0,0,10,0" />
                            </extension:SmoothScrollViewer>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="RecommendListItemStyle"
                   TargetType="ListBoxItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom}">
                                <StackPanel Width="450"
                                            Height="600"
                                            Margin="0,20,0,0">
                                    <Grid>
                                        <!--图片不存在时默认展示-->
                                        <Border Width="45"
                                                Height="60"
                                                CornerRadius="8"
                                                Background="LightGray"
                                                Margin="5,5,5,0">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="20"
                                                                  ShadowDepth="0"
                                                                  Color="Black"
                                                                  Opacity="0.4" />
                                            </Border.Effect>
                                            <Grid>
                                                <TextBlock FontFamily="{StaticResource IconFont}"
                                                           FontSize="80"
                                                           FontWeight="ExtraBold"
                                                           Text="&#xe64b;"
                                                           Foreground="#33000000"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />

                                            </Grid>
                                        </Border>
                                        <Border CornerRadius="8"
                                                Margin="5,5,5,0"
                                                Width="450"
                                                Height="600">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding Img}"
                                                            RenderOptions.BitmapScalingMode="LowQuality" />
                                            </Border.Background>
                                        </Border>

                                        <Rectangle x:Name="background"
                                                   Fill="#88000000"
                                                   Width="450"
                                                   Height="600"
                                                   RadiusX="8"
                                                   Margin="5,5,5,0"
                                                   RadiusY="8"
                                                   Visibility="Hidden">
                                        </Rectangle>
                                        <Button x:Name="playButton"
                                                Style="{StaticResource CornerRadiusButton}"
                                                Content="&#xea82;"
                                                FontFamily="{StaticResource IconFont}"
                                                Foreground="Snow"
                                                FontSize="18"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Left"
                                                Visibility="Hidden"
                                                Margin="20,10,10,10"
                                                Command="{Binding DataContext.PlayCommand, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}" />
                                        <Button x:Name="infoButton"
                                                Style="{StaticResource CornerRadiusButton}"
                                                Content="&#xe719;"
                                                FontFamily="{StaticResource IconFont}"
                                                Foreground="Snow"
                                                FontSize="18"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Right"
                                                Margin="10,10,20,10"
                                                Visibility="Hidden"
                                                Command="{Binding DataContext.SettingAlbumCommand, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="15"
                                               TextWrapping="Wrap"
                                               Margin="10,0,0,0"
                                               Foreground="{DynamicResource DefaultForgeground}" />
                                    <TextBlock Text="{Binding Artist}"
                                               FontSize="12"
                                               Foreground="#7E7E7E"
                                               TextWrapping="Wrap"
                                               Margin="10,0,0,0" />
                                </StackPanel>
                            </materialDesign:TransitioningContent>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="background"
                                            Property="Visibility"
                                            Value="Visible" />
                                    <Setter TargetName="infoButton"
                                            Property="Visibility"
                                            Value="Visible" />
                                    <Setter TargetName="playButton"
                                            Property="Visibility"
                                            Value="Visible" />
                                    <!--<Setter Property="Tag"
                                 Value="{Binding RelativeSource={RelativeSource Self},Path=}" />-->

                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
