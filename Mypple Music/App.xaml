                                    <Ellipse x:Name="hole1"
                                             Width="15"
                                             Height="15"
                                             Stroke="#7b8394"
                                             Fill="#95a1b5"
                                             StrokeThickness="0.2"
                                             Margin="10,21,95,14"
                                             RenderTransformOrigin="0.35,0.242"
                                             Opacity="0.0">
