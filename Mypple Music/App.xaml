                                            Property="Text"
                                            Value="&#xea0c;" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Player.VolumeValue,Converter={StaticResource VolumeValue}}"
                                             Value="1">
                                    <Setter TargetName="Content"
                                            Property="Text"
                                            Value="&#xea0e;" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Player.VolumeValue,Converter={StaticResource VolumeValue}}"
                                             Value="2">
                                    <Setter TargetName="Content"
                                            Property="Text"
                                            Value="&#xea0f;" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Player.VolumeValue,Converter={StaticResource VolumeValue}}"
                                             Value="3">
                                    <Setter TargetName="Content"
                                            Property="Text"
                                            Value="&#xea0d;" />
                                </DataTrigger>
