            <!--音量按钮样式-->
            <Style x:Key="VolumeButtonStyle"
                   TargetType="ToggleButton">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="borderIn"
                                    Background="Transparent"
                                    CornerRadius="2">
                                <StackPanel VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <TextBlock x:Name="Content"
                                               HorizontalAlignment="Center"
                                               FontFamily="{StaticResource IconFont}"
                                               Text="&#xea0d;"
                                               FontSize="21"
                                               FontWeight="Light"
                                               Foreground="#242424">
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="borderIn"
                                            Property="Background"
                                            Value="#22000000" />
                                </Trigger>
                                <DataTrigger Binding="{Binding Player.VolumeValue,Converter={StaticResource VolumeValue}}"
                                             Value="0">
                                    <Setter TargetName="Content"
                                            Property="Text"
                                            Value="&#xea0c;" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Player.VolumeValue,Converter={StaticResource VolumeValue}}"
                                             Value="1">
                                    <Setter TargetName="Content"
                                            Property="Text"
                                            Value="&#xea0e;" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Player.VolumeValue,Converter={StaticResource VolumeValue}}"
                                             Value="2">
                                    <Setter TargetName="Content"
                                            Property="Text"
                                            Value="&#xea0f;" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Player.VolumeValue,Converter={StaticResource VolumeValue}}"
                                             Value="3">
                                    <Setter TargetName="Content"
                                            Property="Text"
                                            Value="&#xea0d;" />
                                </DataTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--RepeatButton样式-->
            <Style x:Key="RepeatButtonTransparent"
                   TargetType="{x:Type RepeatButton}">
